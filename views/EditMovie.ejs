<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/091d5af1bf.js" crossorigin="anonymous"></script>
    
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <div class="container">
        <div class="d-flex flex-row bd-highlight mb-3">
            <div class="me-auto p-2 bd-highlight">
              <h3><i class="fas fa-edit text-primary"></i> Edit Movie</h3>
            </div>
            <div class="p-2 bd-highlight">
              <a href="/" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Back to Movie List
              </a>
            </div>
        </div>
          <hr>

          <form action="/EditMovie/<%= movie.id %>" method="post"  enctype='multipart/form-data' class="mb-5">
            <input type="number" value="<%= movie.id %>" name="movieId" id="movieId" hidden>
            <div class="d-flex flex-row">
                <img src="/<%= movie.Image %>" alt="<%= movie.Image %>" style="width: 100px;" class="mb-3">
                <div class="mb-3 p-2 pt-3">
                    <lable class="form-label">Movie Poster</span>
                    <input type="file" class="form-control" id="img" name="img" placeholder="movie poster" accept="image/png, image/gif, image/jpeg" value="<%= movie.Image %>">
                </div>
                <input type="text" name="prevImg" id="prevImg" value="<%= movie.Image %>" hidden>
            </div>
            
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter movie title..." value="<%= movie.title %>" required>
                <label for="title" class="form-label">Title</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="plot" name="plot" value="<%= movie.plot %>" required><%= movie.plot %></textarea>
                <label for="plot">Plot</label>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="director" name="director" placeholder="Enter director..." value="<%= movie.director %>" required>
                        <label for="director" class="form-label">Director</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="date" class="form-control" id="date" name="date" placeholder="" value="<%= movie.dateReleased %>" required>
                        <label for="date" class="form-label">Date Released </label>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="actors" name="actors" placeholder="Enter the actors..." value="<%= movie.Actors %>" required>
                <label for="actors" class="form-label">Actors</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter the genres..." value="<%= movie.Genre %>" required>
                <label for="genre" class="form-label">Genre</label>
            </div>

            <input class="btn btn-primary mb-3" type="submit" value="Submit">
        </form>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>